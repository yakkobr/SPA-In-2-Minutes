<% layout('layout') %>


<div class="container">
  <div class="row">
    <div class="col-lg-10">
      <h1>Create a New Pin</h1>
      <form action="/pins/create" role="form" method="post" enctype="multipart/form-data">
        <div class="form-group">
            <label for="title">Title:</label>
            <input type="text" class="form-control" name="title" />
        </div>
        <div class="form-group">
            <label for="desc">Description:</label>
            <textarea type="text" class="form-control" name="desc"> </textarea>
        </div>
        <div class="form-group">
            <label for="username">Created By:</label>
            <input type="text" class="form-control" name="username" />
        </div>
        <div class="form-group">
            <label for="sampleFile">Image Path:</label>
            <input type="file" name="sampleFile" required="" />
        </div>
        <button type="submit" class="btn btn-success">Submit</button>
      </form>
    </div>
  </div>
</div>
